<div class="container">
  <div class="row">
<h2>会員一覧</h2>
</div>
<div class="row">
  <div class="offset-md-1">
  <table class="table">
  <head>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  </head>

  <body>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>

        <td>
          <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name + customer.first_name %>
          <% end %>
        </td>

        <td><%= customer.email %></td>

        <td>
         <% if customer.is_deleted %>
            退会
         <% else %>
            有効
         <% end %>
        </td>
      </tr>
      <% end %>
  </body>
  </table>
  <%= paginate @customers %>
  </div>
  </div>
  </div>