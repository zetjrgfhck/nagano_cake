<div class="row">
  <div class="col-6 col-lg-3">
    <h2>商品一覧</h2>
      <% @items.each do |item| %>
    <div>
      <p><%= link_to item_path(item) do %>
         <%= image_tag item.get_image(100, 100) %>
         <% end %>
      </p>
      <p>商品名<%= item.name %><</p>
      <p>¥<%= item.price %></p>
    </div>
      <% end %>
  </div>
</div>
<%= paginate @items %>