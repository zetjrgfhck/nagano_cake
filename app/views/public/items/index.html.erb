<div class="container px-5 px-sm-0">
  <div class="col-md-8 offset-md-1">
    <div class="row">
    <h2>商品一覧</h2>
    </div>

<div class="row">
 <table class="table">
        <thead>
          <tr>
            <th>商品イメージ</th>
            <th>商品名</th>
            <th>税抜き価格</th>
          </tr>
        </thead>

        <tbody>
            <% @items.each do |item| %>
          <tr>
            <td>
              <%= image_tag item.image, size: "100x100" %>
            </td>
            <td>
              <%= link_to item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td>
              <%= item.price %>
            </td>
          </tr>
           <% end %>
        </tbody>
      </table>
    </div>
  </div>
<%= paginate @items %>
</div>