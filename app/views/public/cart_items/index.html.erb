<div>
<h4>ショッピングカート</h4>
<%= link_to "カートを空にする", cart_items_all_destroy_path, method: :delete, "data-confirm" => "カートを空にしますか？" %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if current_customer.cart_items.present? %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= (cart_item.item.with_tax_price).to_i %></td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
        <%= f.number_field :amount, min: 1, max:10, id: "item_id" %>
        <%= f.submit "変更" %>
        <% end %>
      </td>
      <td>
        <% subtotal = ((cart_item.item.price*cart_item.amount)).to_i %>
        <%= subtotal %>
      </td>
          <% @total += subtotal %>
           <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, "data-confirm" => "削除しますか?" %></td>
      </tr>
        <% end %>
        <% end %>
</table>

      <div>
        <%= link_to "買い物を続ける", root_path %>
      </div>
      <tr>
      <th>合計金額</th>
      <td><%= @total %></td>
      </td>
</tbody>
</div>

<div>
  <%= link_to "情報入力に進む", new_order_path %>
</div>