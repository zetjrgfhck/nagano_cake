<div>
    <h5>注文履歴一覧</h5>
</div>
<div>
<table>
  <thead>
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>注文詳細</th>
  </tr>
  </thead>
<tbody>
<% @orders.each do |order| %>
<tr>
      <td>
        <%= order.created_at %>
      </td>
      <td>
        <%= order.postal_code %></br>
        <%= order.address %></br>
        <%= order.name %>
      </td>
      <td>
        <% order.order_details.each do |order_detail| %>
        <%= order_detail.item.name %></br>
        <% end %>
      </td>
      <td>
        <%= order.total_payment %>円
      </td>
      <td>
        <%= link_to "表示する", order_path(order) %>
      </td>
</tr>
  <% end %>

</table>
</tbody>
</div>