<h2>注文履歴一覧</h2>
<table>
  <thead>
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.postal_code %></td></br>
      <td><%= order.address %></td></br>
      <td><%= order.name %></td>

      <td>
        <%= order. order_details.each do |order_detail| %>
          <%= order_detail.item_id %>
          <% end %>
      </td>
      <td><%= order.total_payment %>円</td>
    </tr>
  <% end %>
</table>