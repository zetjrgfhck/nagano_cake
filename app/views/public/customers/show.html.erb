<div class="container">
  <div class="row">
<h3>マイページ</h3>
 </div>

<div class="row">
  <h4>
  <span>登録情報</span>
  <span><%=link_to "編集する", customers_informetion_edit_path, class: 'btn btn-success' %><span>
  </h4>
</div>

<div class="row">
<table>
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %></td>
    <td><%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana %></td>
    <td><%= @customer.first_name_kana %></td>
  </tr>
   <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
   <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
   <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
   <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>
</div>
<span>注文履歴</span>
<span><%=link_to "一覧を見る", orders_path(@customer) %></span>
</div>